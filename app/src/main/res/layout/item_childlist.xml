<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:background="#DFE6EE">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/child_photo"
        android:layout_width="118dp"
        android:layout_height="99dp"
        android:layout_below="@+id/title_UpdateProfil"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:elevation="4dp"
        android:src="@drawable/photocercle"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="2dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#8BC34A"
        app:civ_shadow_radius="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/child_name"
        android:layout_width="240dp"
        android:layout_height="0dp"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="72dp"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/child_photo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="child_name" />

    <TextView
        android:id="@+id/child_gender"
        android:layout_width="238dp"
        android:layout_height="24dp"
        android:layout_marginEnd="72dp"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/child_photo"
        app:layout_constraintTop_toBottomOf="@+id/child_name"
        tools:text="vacc_date" />

    <TextView
        android:id="@+id/child_age"
        android:layout_width="239dp"
        android:layout_height="26dp"
        android:layout_marginEnd="179dp"
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/child_photo"
        app:layout_constraintTop_toBottomOf="@+id/child_gender"
        tools:text="child_status" />
</androidx.constraintlayout.widget.ConstraintLayout>
